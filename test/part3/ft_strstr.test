*/
	size_t	tests = 100, i = 0;
	int correct = 1;
	found_strstr(0, i++);
	printf("seeking present needle\n");
	while (i < tests)
	{
		correct = found_strstr(30, i++);
		if (correct == 0)
			abort();
	}
	if (correct == 1)
		printf(GREEN"				OK!\n"UNCOLOR);
	else
		printf(RED"				KO!\n"UNCOLOR);
	i = 0;
	printf("seeking missing needle\n");
	while (i < tests)
	{
		correct = not_found_strstr(50, i++);
		if (correct == 0)
			abort();
	}
	if (correct == 1)
		printf(GREEN"				OK!\n"UNCOLOR);
	else
		printf(RED"				KO!\n"UNCOLOR);
}

