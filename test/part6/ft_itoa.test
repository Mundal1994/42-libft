#include "libft.h"
#include "test.h"

static void	validate_itoa(int n)
{
	char	itoa[30];
	char*	result;

	sprintf(itoa, "%d", n);
	result = ft_itoa(n);
	printf("expecting [%s], got ", itoa);
	printf("[%s]\n", result);
	assert(strcmp(result, itoa) == 0);
	free(result);
}

void ft_test_itoa(void)
{
	printf(MAGENTA"ITOA\n"UNCOLOR);

	int	n1 = 42;
	int	n2 = -42;
	int	n3 = 0;
	int n4 = INT_MIN;
	int	n5 = INT_MAX;
	int n6 = 1234;
	int n7 = -1234;
	int n8 = 1;
	int n9 = -1;
	int n10 = 100;
	int n11 = -100;

	validate_itoa(n1);
	validate_itoa(n2);
	validate_itoa(n3);
	validate_itoa(n4);
	validate_itoa(n5);
	validate_itoa(n6);
	validate_itoa(n7);
	validate_itoa(n8);
	validate_itoa(n9);
	validate_itoa(n10);
	validate_itoa(n11);
}
